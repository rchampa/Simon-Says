<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    
    <style name="MiEstilo"
     parent="@android:style/TextAppearance.Medium"  >
       <item name="android:layout_width">fill_parent</item>
       <item name="android:layout_height">wrap_content</item>
       <item name="android:gravity">center</item>
       <item name="android:textSize">25sp</item>
       <item name="android:layout_marginBottom">20dip</item>
   </style>
   
    <style name="MiEstilo.grande">
     <item name="android:textSize">35pt</item>
	</style>
    
    <style name="EstiloItemLista" parent="@android:style/TextAppearance.Medium"  >
       <item name="android:layout_width">0dp</item>
       <item name="android:layout_height">wrap_content</item>
       <item name="android:textSize">17sp</item>
       <item name="android:focusable">false</item>
   	</style>
   
    <style name="EstiloItemLista.grande">
     	<item name="android:textSize">35pt</item>
	</style>
   
   
   	<style name="EstiloRegistroTV">
       <item name="android:layout_width">match_parent</item>
       <item name="android:layout_height">wrap_content</item>
       <item name="android:textColor">#6A635E</item>
       <item name="android:layout_marginTop">20dp</item>
   	</style>
   	
   	<style name="EstiloRegistroET">
       <item name="android:layout_width">match_parent</item>
       <item name="android:layout_height">wrap_content</item>
       <item name="android:maxLines">1</item>
       <item name="android:layout_marginTop">0dp</item>
       <item name="android:inputType">text</item>
       <item name="android:paddingLeft">40dp</item>  
       
   	</style>
   	
   	<style name="EstiloRegistroET.password">
       <item name="android:inputType">textPassword</item>  
   	</style>
   	
   	
   	<style name="EstiloImageViewParaEditText">
       <item name="android:layout_width">wrap_content</item>
       <item name="android:layout_height">wrap_content</item>
       <item name="android:padding">5dp</item>
   	</style>
   	
   	<style name="Toggle">    
     <item name="android:background">@drawable/toggle_button_bgc</item>
     <item name="android:textOn"></item>
     <item name="android:textOff"></item>
     <item name="android:disabledAlpha">?android:attr/disabledAlpha</item>
     <item name="android:layout_width">75sp</item>
     <item name="android:layout_height">34sp</item>
     
     
 	</style>
 	
   	<style name="EstiloMenuButton">
       <item name="android:layout_width">match_parent</item>
       <item name="android:layout_height">wrap_content</item>
       <item name="android:clickable">true</item>
       <item name="android:textSize">18sp</item>
       <item name="android:textStyle">bold</item>
       <item name="android:typeface">sans</item>
       <item name="android:textColor">#FFFFFF</item>
       <item name="android:gravity">center</item>
   	</style>

</resources>
